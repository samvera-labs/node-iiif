{
  "name": "iiif-processor",
  "version": "3.1.3",
  "description": "IIIF 2.1 Image API modules for NodeJS",
  "main": "index.js",
  "repository": "https://github.com/samvera/node-iiif",
  "author": "Michael B. Klein",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf node_modules/ vendor/ coverage/",
    "lint": "eslint index.js lib/*.js",
    "lint-fix": "eslint --fix index.js lib/*.js",
    "test": "node scripts/test.js --env=jsdom"
  },
  "keywords": [
    "iiif",
    "image",
    "libvips",
    "vips"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "mime-types": "2.x",
    "probe-image-size": "github:notch8/probe-image-size#master",
    "sharp": ">=0.25.2 <1.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "./*.js",
      "lib/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
